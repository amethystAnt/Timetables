<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--regular here-->

    <font
        android:font="@font/roboto_mono_regular"
        android:fontStyle="normal"
        android:fontWeight="400"
        app:font="@font/roboto_mono_regular"
        app:fontStyle="normal"
        app:fontWeight="400" />

    <font
        android:font="@font/roboto_mono_medium"
        android:fontStyle="normal"
        android:fontWeight="500"
        app:font="@font/roboto_mono_medium"
        app:fontStyle="normal"
        app:fontWeight="500" />

    <font
        android:font="@font/roboto_mono_bold"
        android:fontStyle="normal"
        android:fontWeight="600"
        app:font="@font/roboto_mono_bold"
        app:fontStyle="normal"
        app:fontWeight="600" />

    <!--italic here-->

    <font
        android:font="@font/roboto_mono_italic"
        android:fontStyle="italic"
        android:fontWeight="400"
        app:font="@font/roboto_mono_italic"
        app:fontStyle="italic"
        app:fontWeight="400" />

    <font
        android:font="@font/roboto_mono_medium_italic"
        android:fontStyle="italic"
        android:fontWeight="500"
        app:font="@font/roboto_mono_medium_italic"
        app:fontStyle="italic"
        app:fontWeight="500" />

    <font
        android:font="@font/roboto_mono_bold"
        android:fontStyle="italic"
        android:fontWeight="600"
        app:font="@font/roboto_mono_bold_italic"
        app:fontStyle="italic"
        app:fontWeight="600" />

</font-family>